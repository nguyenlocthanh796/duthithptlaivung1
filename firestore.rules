rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isPostAuthor(postId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/posts/$(postId)).data.authorId == request.auth.uid;
    }

    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Posts collection - anyone can read, authenticated users can create
    match /posts/{postId} {
      // Post document
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        resource.data.authorId == request.auth.uid;

      // Comments subcollection: /posts/{postId}/comments/{commentId}
      match /comments/{commentId} {
        // Ai cũng đọc được bình luận của bài viết
        allow read: if true;

        // Chỉ user đã đăng nhập mới được tạo bình luận
        allow create: if isAuthenticated() &&
          request.resource.data.authorId == request.auth.uid;

        // Chủ bình luận hoặc chủ bài viết được cập nhật ghim
        allow update: if isAuthenticated() && (
          resource.data.authorId == request.auth.uid ||
          (
            isPostAuthor(postId) &&
            request.resource.data.diff(resource.data).changedKeys().hasOnly(['pinned', 'pinnedAt'])
          )
        );
        
        // Chỉ chủ bình luận được phép xóa
        allow delete: if isAuthenticated() &&
          resource.data.authorId == request.auth.uid;
      }
    }

    // Exams collection - anyone can read, authenticated users can create
    match /exams/{examId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Documents collection - anyone can read, authenticated users can create
    match /documents/{documentId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && 
        resource.data.author == request.auth.uid;
    }

    // Bookmarks collection - users can only access their own bookmarks
    match /bookmarks/{bookmarkId} {
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }

    // Check-ins collection - users can only access their own check-ins
    match /checkins/{checkinId} {
      allow read: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }

    // Schedule collection - users can only access their own events
    match /schedule/{eventId} {
      allow read, write: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
    }
  }
}

